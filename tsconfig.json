{
  "compilerOptions": {
    "strict": true,
    "allowJs": true,
    "target": "ESNEXT",
    "module": "ESNEXT",
    "lib": ["dom", "dom.iterable", "esnext"],
    "moduleResolution": "node",
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "useDefineForClassFields": true,
    "noEmit": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": "."
  },
  "exclude": ["node_modules"]
}
